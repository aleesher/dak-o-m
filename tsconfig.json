{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "allowJs": false,
    "noImplicitReturns": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "declaration": true,
    "lib": ["es6", "dom", "esnext.asynciterable", "es2017.object"],
    "skipLibCheck": true,
    "baseUrl": "."
  },
  "types": ["node"],
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "src/lib/dakota-services-common/node-webservices/**/*.test.ts"],
  "compileOnSave": false
}
